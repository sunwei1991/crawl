{
  "appenders": [
    {
      "type": "console"
    },
    {
      "type": "logLevelFilter",
      "level": "DEBUG",
      "appender":{
        "type": "dateFile",
        "filename": "log/",
        "pattern": "yyyy-MM-dd.log",
        "maxLogSize": 1024,
        "backups":4,
        "alwaysIncludePattern": true
      },
      "category": "app"
    }
  ],
  "replaceConsole": true
}